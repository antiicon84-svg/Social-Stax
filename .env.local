# ==============================================================
# FIREBASE CONFIGURATION - REQUIRED FOR LOCALHOST DEVELOPMENT
# ==============================================================
# To get these values:
# 1. Go to https://console.firebase.google.com/
# 2. Select your project
# 3. Click Settings (gear icon) > Project Settings
# 4. Scroll down to "Your apps" section
# 5. Find your web app and click the config button
# 6. Copy the values below:

VITE_FIREBASE_API_KEY=YOUR_ACTUAL_API_KEY_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_APP_ID=YOUR_APP_ID_FROM_FIREBASE_CONSOLE
VITE_FIREBASE_URL=https://YOUR_PROJECT_ID.firebaseio.com

# ==============================================================
# GOOGLE GEMINI API KEY - For Content Lab Feature
# ==============================================================
# Get from: https://console.cloud.google.com/
# Make sure Generative Language API is enabled

VITE_GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_FROM_CLOUD_CONSOLE

# ==============================================================
# ADMIN CONFIGURATION (DEVELOPMENT ONLY)
# ==============================================================
# Change these before deploying to production!

VITE_ADMIN_EMAIL=admin@example.com
VITE_ADMIN_PASSWORD=Change@123!
VITE_ADMIN_SECRET_KEY=dev_admin_secret_key_change_me_in_production
