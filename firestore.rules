rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===================================================
    // USERS COLLECTION
    // ===================================================
    match /users/{userId} {
      // User can read own, Admin can read all (for granting access)
      allow read: if request.auth.uid == userId || isAdmin();
      
      // Only the user can write to their own profile
      allow write: if request.auth.uid == userId;
      
      // CLIENTS Subcollection
      match /clients/{clientId} {
        allow read, write: if request.auth.uid == userId;
      }

      // POSTS Subcollection (User specific)
      match /posts/{postId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Passwords are never readable or writable directly
      match /private/{document=**} {
        allow read: if false; 
        allow write: if false; 
      }
    }

    // ===================================================
    // PROJECTS COLLECTION (Top Level)
    // ===================================================
    match /projects/{projectId} {
      // Users can only read projects they own
      allow read: if resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if resource.data.userId == request.auth.uid;
    }

    // ===================================================
    // POSTS COLLECTION (Public/Top Level - Keeping just in case)
    // ===================================================
    match /posts/{postId} {
      allow read: if resource.data.isPublic == true || resource.data.userId == request.auth.uid;
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if resource.data.userId == request.auth.uid;
    }

    // ===================================================
    // FREE ACCESS GRANTS (Admin Only)
    // ===================================================
    match /free_access/{grantId} {     
      allow read, write: if request.auth.uid != null && isAdmin();
    }

    // ===================================================
    // RATE LIMITING COLLECTION (For brute force protection)
    // ===================================================
    match /rateLimiting/{ipAddress} {
      allow read, write: if false; // Only backend can access
    }

    // ===================================================
    // DEFAULT DENY
    // ===================================================
    // Any collection not explicitly allowed is DENIED
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
